<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/logo"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First Aid kit for your child"
        android:layout_marginTop="5dp"
        android:textColor="@color/pink"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Here are your first-aid kit must-haves:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Infant and/or child thermometers (both digital and ear or rectal)" 
        android:background="@color/lightpurple"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/seagreen"
        android:text="Children's and/or infants' acetaminophen and ibuprofen, as recommended by your doctor, to relieve fever and mild pain" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightpurple"
        android:text="Antihistamines, as recommended by your doctor, for insect bites, hives, and allergic reactions" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/seagreen"
        android:text="Rubbing alcohol swabs to clean thermometers, tweezers, and scissors" />

<TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:background="@color/lightpurple"
        android:layout_height="wrap_content"
        android:text="Petroleum jelly to lubricate rectal thermometers" />
    
<TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:background="@color/seagreen"
        android:layout_height="wrap_content"
        android:text="Aloe gel for burns" />

<TextView
        android:id="@+id/textView5"
        android:background="@color/lightpurple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A pair of sharp scissors" />

<TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/seagreen"
        android:text="Child-safe sunscreen" />

<TextView
        android:id="@+id/textView5"
        android:background="@color/lightpurple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Child-safe insect repellent" />

<TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:background="@color/seagreen"
        android:layout_height="wrap_content"
        android:text="Nasal aspirator bulb" />

<TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightpurple"
        android:text="An assortment of adhesive bandage strips in various sizes and shapes (for children's sensitive skin, get the less-sticky kind)" />

<TextView
        android:id="@+id/textView5"
        android:background="@color/seagreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:text="Gauze rolls (1/2 to 2 inches wide) and Gauze pads (2 by 2 inches and 4 by 4 inches)" />

<TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adhesive tape" 
        android:background="@color/lightpurple"
        />
<TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:background="@color/seagreen"
        
        android:layout_height="wrap_content"
        android:text="Mild liquid soap (most antibacterial and deodorant soaps are too strong for babies' sensitive skin)" />
<TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightpurple"
        android:text="An oral syringe or calibrated cup or spoon for administering medicines" />
<TextView
        android:id="@+id/textView5"
        android:background="@color/seagreen"
        android:layout_width="match_parent"
        
        android:layout_height="wrap_content"
        android:text="A hot water bottle and an ice pack" />
<TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightpurple"
        android:text="Blanket (space blanket)" />
<TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:background="@color/seagreen"
        android:layout_height="wrap_content"
        android:text="First-aid manual" />



</LinearLayout>
</ScrollView>