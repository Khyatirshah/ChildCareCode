<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mandatory and Optional Vaccines Detail"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:layout_marginLeft="10dp"
        />
    
    
   <!-- Third vaccin -->

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="10dp"
     android:orientation="vertical"
     android:background="@color/lightpink"
      >

    <!-- name -->

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content" >
 
		<TextView
        	android:id="@+id/textView1"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Name:  "
        	android:textStyle="bold"
        	android:textColor="@color/black"
        
        	/>
		<TextView
        	android:id="@+id/textView1"
        	android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
    	    android:text="  MMR (Mandatory)"
        	android:textStyle="bold"
        	android:textColor="@color/pink"/>		
   </LinearLayout>
<!-- prevents -->
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content" >
		<TextView
        	android:id="@+id/textView1"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="prevents:  "
        	android:textStyle="bold"
        	android:textColor="@color/black"
        
        	/>
		<TextView
        	android:id="@+id/textView1"
        	android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
    	    android:text="  Measles, Mumpss, Rubella."
    	    android:textColor="@color/black"
        	
        	/>
 </LinearLayout>
<!-- importance -->
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical" >
		<TextView
        	android:id="@+id/textView1"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Important Info:  "
        	android:textStyle="bold"
        	android:textColor="@color/black"
        
        	/>
		<TextView
        	android:id="@+id/textView1"
        	android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
    	    android:text="  There might be slight fever , joint painor stiffness after the vaccination. "
    	    android:textColor="@color/black"
        	
        	/>
 </LinearLayout>
 	 
 </LinearLayout>
    
</LinearLayout>