<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/logo"
        android:orientation="vertical" >
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
         <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_marginTop="10dp"
                >

                <Button
                    android:id="@+id/btn_videos"
                    style="@style/DashboardButton"
                    android:layout_width="107dp"
                    android:drawableTop="@drawable/videos"
                    android:text="Videos"
                    android:textColor="@color/pink"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_faqs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/linearLayout2"
                    android:layout_marginTop="17dp"
                    android:text="From here you can find different videos that are useful for child and mother care"
                    android:textColor="@color/blue"
                    android:textStyle="bold" />

            </LinearLayout>
            
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                 >

                <Button
                    android:id="@+id/btn_faq"
                    style="@style/DashboardButton"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/faq"
                    android:text="FAQs"
                    android:textColor="@color/pink"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtMother"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/linearLayout2"
                    android:layout_marginTop="17dp"
                    android:text="From here you can different types of Frequently Asked Questions about child and mother care"
                    android:textStyle="bold"
                    android:textColor="@color/green"
                     />
            </LinearLayout>
        

    </LinearLayout>

</LinearLayout>